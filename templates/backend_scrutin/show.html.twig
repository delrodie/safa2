{% extends 'base.html.twig' %}

{% block title %}Scrutin{% endblock %}

{% block body %}
    <h1>Scrutin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scrutin.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ scrutin.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ scrutin.date ? scrutin.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ scrutin.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ scrutin.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_backend_scrutin_index') }}">back to list</a>

    <a href="{{ path('app_backend_scrutin_edit', {'id': scrutin.id}) }}">edit</a>

    {{ include('backend_scrutin/_delete_form.html.twig') }}
{% endblock %}
