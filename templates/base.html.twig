<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}SAFA -Salon International de la Famille{% endblock %}</title>

        <meta name="keywords" content="SAFA, salon, famille, couple"  />
        <meta name="description" content="Salon International de la Famille" />
        <meta name="revisit" content="7 days" />
        <meta name="revisit-after" content="7 days">
        <meta name="Author" content="SAFA, Delrodie AMOIKON">
        <meta name="Copyright" content="www.safaci.org">
        <meta name="Content-Language" content="FR">
        <meta name="distribution" content="global" />
        <meta name="Audience" content="All" />
        <meta name="Robots" content="full">

        {% block meta %}{% endblock %}

        <link rel="icon" href="">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ absolute_url(asset('assets/css/app.css')) }}">
        {% endblock %}
    </head>
    <body>

        <div class="container">
        <header>
            <nav class="navbar">
                <div class="container-fluid" data-aos="flip-left" data-aos-easing="ease-out-cubic" data-aos-duration="2000">
                    <a class="navbar-brand" href="{{ absolute_url(path('app_home')) }}">
                        <!--<img src="" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">-->
                        <span class="h1">SAFA</span>
                    </a>
                    {{ render(url('app_recherche')) }}
                </div>
            </nav>
        </header>

            {% block body %}{% endblock %}
    </div>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
            <script>
                AOS.init();
            </script>
        {% endblock %}
    </body>
</html>
